# Required - Get your API key from https://dashboard.cohere.com/
COHERE_API_KEY=your_api_key_here

# Optional configuration (defaults shown)
MAX_PAGES=100
MAX_DEPTH=3
MAX_KB=500
REQUEST_DELAY=1.0
USER_AGENT=llm-txt-generator/0.1.0

# API Server configuration
API_HOST=0.0.0.0
API_PORT=8000

# S3 Storage Configuration (for job persistence across instances)
USE_S3_STORAGE=true  # Set to false for in-memory only (single instance)
S3_BUCKET_NAME=llm-txt-jobs  # Your S3 bucket name
AWS_REGION=us-east-1  # AWS region for S3 bucket

# AWS Credentials (if not using IAM roles)
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key

# MCP Server Configuration
LLM_TXT_API_BASE_URL=http://localhost:8000
LLM_TXT_API_TIMEOUT=180
# Frontend (Next.js) Auth
NEXTAUTH_URL=http://localhost:3000
# Generate via: openssl rand -base64 32
NEXTAUTH_SECRET=changeme-dev-secret

# OAuth Providers
GITHUB_ID=
GITHUB_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ========================================
# Payment & Entitlement Configuration
# ========================================

# Dodo Payments - Checkout Configuration
# Base checkout URL (without customer_email - will be added automatically)
NEXT_PUBLIC_CHECKOUT_URL=https://checkout.dodopayments.com/buy/pdt_sao6YQaUrrED1YHn2BVbF?quantity=1&redirect_url=https%3A%2F%2Fdocsforllm.dev%2Fupgrade%2Fsuccess

# Dodo Payments - Webhook Secret
# Get this from your Dodo dashboard under Webhooks
# Used to verify incoming payment webhooks are authentic
DODO_WEBHOOK_SECRET=change-me-dodo-webhook-secret

# Entitlement Secret
# Used to sign one-time tokens for /upgrade/success redirect
# Generate with: openssl rand -hex 32
ENTITLEMENT_SECRET=change-me-entitlement-secret

# Development Mode (DISABLE IN PRODUCTION)
# If true, allows unverified Pro access via /upgrade/success without payment
# Set to false in production to enforce payment verification
ENTITLEMENT_ALLOW_UNVERIFIED=false

# Public Site URL
# Used to build redirect URLs in webhooks
NEXT_PUBLIC_SITE_URL=https://docsforllm.dev

# ========================================
# DynamoDB Configuration
# ========================================

# AWS Region
AWS_REGION=us-east-1

# DynamoDB Table Names
ENTITLEMENTS_TABLE=llmxt-entitlements
PAYMENTS_TABLE=llmxt-payments

# AWS Credentials (if not using IAM roles)
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key

# ========================================
# API Security (Frontend <-> Backend)
# ========================================

# Frontend proxy to backend API
LLM_TXT_UPSTREAM_API_BASE_URL=http://localhost:8000

# HMAC Secret (shared between frontend and backend)
# Generate with: openssl rand -hex 32
HMAC_SECRET=change-me-shared-secret

# Backend HMAC enforcement (set in FastAPI environment)
REQUIRE_HMAC_SIGNATURE=true

# ========================================
# Local Development Quick Start
# ========================================
# For local testing without real payments:
# 1. Set ENTITLEMENT_ALLOW_UNVERIFIED=true
# 2. Set REQUIRE_HMAC_SIGNATURE=false
# 3. Visit /upgrade/success to unlock Pro locally
# 4. Use LocalStack or DynamoDB Local for database testing
